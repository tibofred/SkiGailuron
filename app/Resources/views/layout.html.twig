<script>
jQuery( document ).ready(function($) {   
    
    $('.navbar-toggler').click(function() {
      var clicks = $(this).data('clicks');
      if (clicks) {
        $('.fixed-top').removeClass('fixedscroll');
      } else {
        $('.fixed-top').addClass('fixedscroll');
      }
      $(this).data("clicks", !clicks);
    });
    
    $(".btn_accept").click(function() {
        $.ajax({
            method: "POST",
            url: "{{ path('vw_page_acceptcoocki', {'_locale': 'fr'}) }}",
            data: {}
        })
        .done(function( msg ) {
            $('.coockies_notice').hide();
        });
    });     	
    $(".btn_refuse").click(function() {
        $.ajax({
            method: "POST",
            url: "{{ path('vw_page_refusecoocki', {'_locale': 'fr'}) }}",
            data: {}
        })
        .done(function( msg ) {
            $('.coockies_notice').hide();
            location.reload(true);
        });
    });    
});
</script>

<script>
jQuery( document ).ready(function($) {
    
    $( "#tab_ico" ).click(function() {
        var width = $( window ).width();
        if(width > 768) {
            $("#nav_menu").addClass('show_menu');
        } else {
    		var clicks = $(this).data('clicks');
    		if (clicks) {
    		    $(".navbar-collapse").removeClass('show');
    		} else {
    		    $(".navbar-collapse").addClass('show');
    		}
    		$(this).data("clicks", !clicks);
            
        }
        
    })
    $( "#close_menu" ).click(function() {
        $("#nav_menu").removeClass('show_menu');
    })
})    
</script>
