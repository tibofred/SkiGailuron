                                 {{ form_errors(form.champActivite) }}
                             </div>
                         </div>
                     </div>
                </div>
             </div>
           
            <div class="row">
                     <div class="col-sm-12">
                          <div class="form-group">
                            <div class="row">
                             {{ form_label(form.outilsSite, "Outils", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                             <div class="col-sm-10">
                               {{ form_widget(form.outilsSite, {'attr': {'class': 'form-control'}}) }}
