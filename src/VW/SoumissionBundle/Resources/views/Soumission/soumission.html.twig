                                 {{ form_errors(form.competiteurs) }}
                             </div>
                         </div>
                     </div>
                </div>
             </div>
           
           <div class="row">
                     <div class="col-sm-12">
                          <div class="form-group">
                            <div class="row">
                             {{ form_label(form.champActivite, "Vos champs d'activités", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                             <div class="col-sm-10">
                               {{ form_widget(form.champActivite, {'attr': {'class': 'form-control'}}) }}
