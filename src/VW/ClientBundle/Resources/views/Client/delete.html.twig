{% extends "VWClientBundle::layout.html.twig" %}

{% block title %}

  Contact - {{ parent() }}

{% endblock %}


{% block vwclient_body %}
 
 <div class="container" style="min-height:600px">
<div class="sm-col-12">
        <h2>Supprimer le client</h2>

  <p>
    Êtes-vous certain de vouloir supprimer le client <strong>{{ client.compagnie }}</strong> ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('vw_client_delete', {'id': client.id}) }}" method="post">
    <a href="{{ path('vw_client_homepage')}}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
</form>
    </div>
</div>
    
</div>

{% endblock %}
