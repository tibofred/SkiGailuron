{% extends "VWAbonnementBundle::layout.html.twig" %}

{% block title %}

 Sport - {{ parent() }}

{% endblock %}

{% block vwclient_body %}
 
            
<h1>Liste des tarifs pour la location de ski de fond</h1>
<a href="{{ path('vw_location_raquette_nouveau') }}" class="btn btn-primary">Ajouter</a>
<a href="{{ path('vw_admin_home') }}" class="btn btn-success">Revenir</a>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Catégorie</th>
                  <th>Prix raquettes seulement</th>
                  <th>Prix bâtons seulement</th>
                  <th>Prix raquettes (au clair de lune)</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
                </tr>
              </thead>
              
                
            <tbody>
                
                {% for location in locations %}
                <tr>
                  <td>{{ location.categorie.nom }}</td>
                  <td>{{ location.prixRaquettesSeulement }}</td>
                  <td>{{ location.prixBatonsSeulement }}</td>
                  <td>{{ location.prixRaquettesClairDeLune }}</td>
                  <td><a href="{{ path('vw_location_raquette_modifier', {'id': location.id}) }}" type="button" class="btn btn-success">Modifier</a></td>
                  <td><a href="{{ path('vw_location_raquette_supprimer', {'id': location.id}) }}" type="button" class="btn btn-danger">Supprimer</a></td>
                </tr>
                {% endfor %}
                
              </tbody>
            </table>
          </div>


{% endblock %}

