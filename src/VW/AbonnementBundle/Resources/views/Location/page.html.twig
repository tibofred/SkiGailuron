
{% extends "VWBaseBundle::layout.html.twig" %}

{% block body %}

<!-- Caroussel 
    ||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="7500">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      
        <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="first-slide" src="{{ absolute_url(asset('/images/carousel/hebergement/serveur-web.jpg')) }}" alt="E-Commerce - Conception site web">
          <div class="container">
            <div class="carousel-caption d-none d-md-block text-left">
              <h4>Location et boutique de ski</h4>
              <p>Des serveurs près de votre clientèle améliore le référencement local.</p>
              <p><a class="btn btn-lg btn-primary" href="{{ path('vw_contact_homepage')}}" role="button">Nous contacter</a></p>
            </div>
          </div>
        </div>
            
        <div class="carousel-item">
          <img class="second-slide" src="{{ absolute_url(asset('/images/carousel/hebergement/gestion-courriel.jpg')) }}" alt="Second slide">
          <div class="container">
            <div class="carousel-caption d-none d-md-block text-left">
              <h4>Gestion de courriel</h4>
              <p>Laissez un techinicien d'expérience configurer vos courriels.</p>
              <p><a class="btn btn-lg btn-primary" href="{{ path('vw_contact_homepage')}}" role="button">Contact</a></p>
            </div>
          </div>
        </div>
          
        <div class="carousel-item">
          <img class="third-slide" src="{{ absolute_url(asset('/images/carousel/hebergement/sauvegarde.jpg')) }}" alt="Third slide">
          <div class="container">
            <div class="carousel-caption d-none d-md-block text-right">
              <h4 class="red">Sauvegarde journalière</h4>
              <p style="color:black;">Ayez la conscience tranquille.</p>
              <p><a class="btn btn-lg btn-primary" href="{{ path('vw_contact_homepage')}}" role="button">Contact</a></p>
            </div>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


<!-- Contenu de la page 
    ||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
-->
        <div class="container pages">
                <div class="row">
                    <div class="col-sm-12">
                        <h1>Atelier et location de ski de fond</h1>
                        <h2>Le centre de ski de fond Gai Luron vous offres des services de réparation pour votre équipement de ski de fond et de raquette. Nous vendons aussi des produits pour le fartage et de la cire de glisse qu’on applique à chaud.</h2>
                    </div>
            
                </div>
        </div>

        <div class="container">    
        
         <!-- START THE FEATURETTES -->

      <hr class="featurette-divider">

      <div class="row featurette">
        <div class="col-md-7">
          <h3 class="featurette-heading">Location de <span class="text-muted red">Ski de fond</span></h3>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Location de ski de fond</th>
          <th>Équipement complet</th>
          <th>Ski seulement</th>
          <th>Bottes seulement</th>
          <th>Bâtons seulement</th>
        </tr>
      </thead>
      
        
    <tbody>
        
        {% for location in locations_ski %}
        <tr>
          <td>{{ location.categorie.nom }}</td>
          <td>{{ location.prixEquipementComplet }}</td>
          <td>{{ location.prixSkiSeulement }}</td>
          <td>{{ location.prixBottesSeulement }}</td>
          <td>{{ location.prixBatonsSeulement }}</td>
          </tr>
        {% endfor %}
        
      </tbody>
    </table>
  </div>
        </div>
        <div class="col-md-5">
          <img class="featurette-image img-fluid mx-auto" src="{{ absolute_url(asset('/images/carousel/hebergement/serveur-web-vitesse.jpg')) }}" alt="Generic placeholder image">
        </div>
      </div>

      <hr class="featurette-divider">

      <div class="row featurette">
        <div class="col-md-7 order-md-2">
          <h3 class="featurette-heading">Location de <span class="text-muted">Raquettes</span></h3>

                 <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Location de raquettes</th>
                          <th>Raquette seulement</th>
                          <th>Bâtons seulement</th>
                          <th>Raquette<br /><em>(au clair de lune)</em></th>
                        </tr>
                      </thead>


                    <tbody>

                        {% for location in locations_raquette %}
                        <tr>
                          <td>{{ location.categorie.nom }}</td>
                          <td>{{ location.prixRaquettesSeulement }}</td>
                          <td>{{ location.prixBatonsSeulement }}</td>
                          <td>{{ location.prixRaquettesClairDeLune }}</td>
                          </tr>
                        {% endfor %}

                      </tbody>
                    </table>
                  </div>
        </div>
        <div class="col-md-5 order-md-1">
            <img class="featurette-image img-fluid mx-auto" src="{{ absolute_url(asset('/images/carousel/hebergement/entretien-site-web.jpg')) }}" alt="Generic placeholder image">
        </div>
      </div>

      <hr class="featurette-divider">

      <div class="row featurette">
        <div class="col-md-7">
          <h3 class="featurette-heading">Location de <span class="text-muted">traîneau pour enfant</span></h3>
             <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Location de traîneau pour enfant (*sur réservation)</th>
                      <th>Tarif</th>
                    </tr>
                  </thead>


                <tbody>

                    {% for location in locations_traineau %}
                    <tr>
                      <td>{{ location.duree.nom }}</td>
                      <td>{{ location.prix }}</td>
                      </tr>
                    {% endfor %}

                  </tbody>
                </table>
              </div>
        </div>
        <div class="col-md-5">
          <img class="featurette-image img-fluid mx-auto" src="{{ absolute_url(asset('/images/carousel/hebergement/sauvegarde-quotidienne.jpg')) }}" alt="Generic placeholder image">
        </div>
      </div>

      <hr class="featurette-divider">
            
        <div class="row featurette">
        <div class="col-md-7 order-md-2">
          <h3 class="featurette-heading">Location de <span class="text-muted">Fatbike</span></h3>
  <em>Le billet d’accès est inclus avec la location d’un vélo</em>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Location de vélo</th>
          <th>Tarif</th>
        </tr>
      </thead>
      
        
    <tbody>
        
        {% for location in locations_fatbike %}
        <tr>
          <td>{{ location.duree.nom }}</td>
          <td>{{ location.prix }}</td>
          </tr>
        {% endfor %}
        
      </tbody>
    </table>
  </div>
        </div>
        <div class="col-md-5 order-md-1">
            <img class="featurette-image img-fluid mx-auto" src="{{ absolute_url(asset('/images/carousel/hebergement/entretien-site-web.jpg')) }}" alt="Generic placeholder image">
        </div>
      </div>

    
    </div>    


  


{% endblock %}