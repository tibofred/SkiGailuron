
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="7500">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" ></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
    </ol>

    <!-- Carroussel -->




    <div class="carousel-inner" role="listbox">

        <div class="carousel-item">
            <img class="first-slide" src="{{ absolute_url(asset('/images/carousels/tarifs-raquette/sentier-raquette-laurentides-2.jpg')) }}"
                 alt="E-Commerce - Conception site web">
            <div class="container">
                <div class="carousel-caption d-none d-md-block text-left">
                    <h1>45 minutes from Montreal, 17 km of snowshoes trail</h1>
                    <p>Enjoy the 4 trails of varied distances for all levels.</p>
                    <p><a class="btn btn-lg btn-primary" href="{{ path('vw_sentier_raquette_en', {'_locale':'en'}) }}" role="button">Sentiers</a></p>
                </div>
            </div>
        </div>



        <div class="carousel-item active">
            <img class="second-slide" src="{{ absolute_url(asset('/images/carousels/tarifs-raquette/sentier-raquette-laurentides.jpg')) }}"
                 alt="Second slide">
            <div class="container">
                <div class="carousel-caption d-none d-md-block">
                    <h1>17 km of trails for snowshoeing</h1>
                    <p>Enjoy nature in its purest form !</p>
                    <p><a class="btn btn-lg btn-primary" href="{{ path('vw_sentier_raquette_en', {'_locale':'en'}) }}" role="button">Tails</a></p>
                </div>
            </div>
        </div>

        <div class="carousel-item">
            <img class="third-slide" src="{{ absolute_url(asset('/images/carousels/tarifs-raquette/refuge-raquette.jpg')) }}"
                 alt="Third slide">
            <div class="container">
                <div class="carousel-caption d-none d-md-block text-right">
                    <h1>Refuges of Gai-Luron</h1>
                    <p>Two shelters to eat and warm up</p>
                    <p><a class="btn btn-lg btn-primary" href="{{ path('vw_sentier_raquette_en', {'_locale':'en'}) }}" role="button">Tails</a></p>
                </div>
            </div>
        </div>




    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<div class="container pages">
    <div class="row">
        <div class="col-sm-12">
            <h1>Snowshoes rates</h1>
            <h2>17 km of snowshoes trails with views and refuges</h2>
        </div>

    </div>
</div>

<div class="container">

    <!-- Contenu -->

    <hr class="featurette-divider">

    <div class="row featurette">
        <div class="col-md-7">
            <h3 class="featurette-heading"><span class="text-muted red">Snowshoes</span> daily rate</span>
            </h3>

            {# pour chaque sport #}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-inverse">
                    <tr>
                        <th></th>
                        <th>WEEK<br/><span class="spanprevente">Taxes included</span></th>
                        <th>WEEKEND<br/><span class="spanprevente">Taxes included</span></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tarif_journalier in tarifs_journaliers %}
                        <tr>
                            <td>{{ tarif_journalier.categorie.nom }}</td>
                            <td>{{ tarif_journalier.prixSemaine }}$</td>
                            <td>{{ tarif_journalier.prixFinDeSemaine }}$</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-5">
            <img class="featurette-image img-fluid mx-auto"
                 src="{{ absolute_url(asset('/images/tarifs-billet-raquette.jpg')) }}"
                 alt="Generic placeholder image">
        </div>

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <a class="btn" href="{{ path('vw_tarif_liste') }}">Change prices</a>
        {% endif %}

    </div>

    <hr class="featurette-divider">

    <div class="row featurette">
        <div class="col-md-7 order-md-2">
            <h3 class="featurette-heading"><span class="text-muted">Snowshoes</span> season passes</h3>


            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-inverse">
                    <tr>
                        <th></th>
                        {#<th>PRE-SALE RATE<br/><span class="spanprevente">10% from October 18 to November 17, 2024<br/>Taxes included</span></th>#}
                        <th>RATES<br/><span class="spanprevente">Taxes included</span></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for abonnement in tarifs_abonnement %}
                        <tr>
                            <td>{{ abonnement.categorie.nomEn }}</td>
                            {#<td>{% if abonnement.prevente is not empty and abonnement.prevente!= '0.00'  %}{{ abonnement.prevente }}${% endif %}</td>#}
                            <td>{{ abonnement.prix }}$</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
                {#<a href="{{ path('vw_abonnement_nouveau_en', {'_locale':'en'}) }}" class="btn btn-primary"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Online season pass!</a>#}
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <a class="btn" href="{{ path('vw_type_liste') }}">Change prices</a>
                {% endif %}
            </div>


        </div>
        <div class="col-md-5 order-md-1">
            <img class="featurette-image img-fluid mx-auto"
                 src="{{ absolute_url(asset('/images/tarifs-passes-de-saison-raquette.jpg')) }}"
                 alt="Generic placeholder image">
        </div>
    </div>




</div>

<hr>