{% block vwclient_body %}
 
            
<h1>Liste des tarifs journaliers</h1>
<a href="{{ path('vw_admin_home') }}" class="btn btn-success">Revenir</a>
<a href="{{ path('vw_tarif_nouveau') }}" class="btn btn-primary">Ajouter</a>

          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Sport</th>
                  <th>Cat√©gorie</th>
                  <th>Prix la semaine</th>
                  <th>Prix la fin de semaine</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
                </tr>
              </thead>
              
                
            <tbody>
                
                {% for tarif in tarifs %}
                <tr>
                  <td>{{ tarif.sport.nom }}</td>
                  <td>{{ tarif.categorie.nom }}</td>
                  <td>{{ tarif.prixSemaine }}</td>
                  <td>{{ tarif.prixFinDeSemaine }}</td>
                  <td><a href="{{ path('vw_tarif_modifier', {'id': tarif.id}) }}" type="button" class="btn btn-success">Modifier</a></td>
                  <td><a href="{{ path('vw_tarif_supprimer', {'id': tarif.id}) }}" type="button" class="btn btn-danger">Supprimer</a></td>
                </tr>
                {% endfor %}
                
              </tbody>
            </table>
          </div>


{% endblock %}

