    <div class="container pages">
        <div class="row">
            <div class="col-sm-12">
                <h1>Tarifs de raquette</h1>
                <h2>17 km de sentiers de raquette avec points de vue et refuges</h2>
            </div>

        </div>
    </div>

    <div class="container">

        <!-- Contenu -->

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h3 class="featurette-heading">Tarif journalier <span class="text-muted red">raquette</span>
                </h3>

                {# pour chaque sport #}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead class="thead-inverse">
                        <tr>
                            <th></th>
                            <th>SEMAINE<br/><span class="spanprevente">Taxes incluses</span></th>
                            <th>FIN DE SEMAINE<br/><span class="spanprevente">Taxes incluses</span></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for tarif_journalier in tarifs_journaliers %}
                            <tr>
                                <td>{{ tarif_journalier.categorie.nom }}</td>
                                <td>{{ tarif_journalier.prixSemaine }}$</td>
                                <td>{{ tarif_journalier.prixFinDeSemaine }}$</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="col-md-5">
                <img class="featurette-image img-fluid mx-auto"
                     src="{{ absolute_url(asset('/images/tarifs-billet-raquette.jpg')) }}"
                     alt="Generic placeholder image">
            </div>
            
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <a class="btn  btn-success" href="{{ path('vw_tarif_liste') }}">Modifier les prix</a>
                {% endif %}
            
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h3 class="featurette-heading">Abonnement saisonnier <span class="text-muted">raquette</span></h3>
                

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead class="thead-inverse">
                        <tr>
                            <th></th>
                            {#<th>TARIF PRÉ-VENTE<br/><span class="spanprevente">10% du 18 octobre au 17 novembre 2024</span><br/><span class="spanprevente">Taxes incluses</span></th>#}
                            <th>TARIF<br/><span class="spanprevente">Taxes incluses</span></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for abonnement in tarifs_abonnement %}
                            <tr>
                                <td>{{ abonnement.categorie.nom }}</td>
                                {#<td>{% if abonnement.prevente is not empty and abonnement.prevente!= '0.00'  %}{{ abonnement.prevente }}${% endif %}</td>#}
                                <td>{{ abonnement.prix }}$</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                    {#<a type="button" class="btn peach-gradient btn-lg" href="{{ path('vw_abonnement_nouveau') }}"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Acheter votre passe en ligne</a>#}
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <a class="btn btn-success" href="{{ path('vw_type_liste') }}">Modifier les prix</a>
                {% endif %}
                </div>


            </div>
            <div class="col-md-5 order-md-1">
                <img class="featurette-image img-fluid mx-auto"
                     src="{{ absolute_url(asset('/images/tarifs-passes-de-saison-raquette.jpg')) }}"
                     alt="Generic placeholder image">
            </div>
        </div>


