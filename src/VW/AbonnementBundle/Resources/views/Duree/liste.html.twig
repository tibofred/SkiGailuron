{% extends "VWAbonnementBundle::layout.html.twig" %}

{% block title %}

 Sport - {{ parent() }}

{% endblock %}

{% block vwclient_body %}
 
            
<h1>Liste des durées</h1>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Nom (Français)</th>
                  <th>Nom (Anglais)</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
                </tr>
              </thead>
              
                
            <tbody>
                
                {% for duree in durees %}
                <tr>
                  <td>{{ duree.nom }}</td>
                  <td>{{ duree.nomEn }}</td>
                  <td><a href="{{ path('vw_duree_modifier', {'id': duree.id}) }}" type="button" class="btn btn-success">Modifier</a></td>
                  <td><a href="{{ path('vw_duree_supprimer', {'id': duree.id}) }}" type="button" class="btn btn-danger">Supprimer</a></td>
                </tr>
                {% endfor %}
                
              </tbody>
            </table>
          </div>


{% endblock %}

