<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="7500">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="first-slide" src="{{ absolute_url(asset('/images/carousels/sentier-raquette/sentier-raquette-1.jpg')) }}"
                 alt="E-Commerce - Conception site web">
            <div class="container">
                <div class="carousel-caption d-none d-md-block text-left">
                    <h4>Snowshoe Trail</h4>
                    <p>Enjoy the scenery quite beautiful for your sport !</p>
                    <p><a class="btn btn-lg btn-primary" href="{{ path('vw_contact_homepage_en', {'_locale': 'en'}) }}" role="button">Contact Us</a></p>
                </div>
            </div>
        </div>

        <div class="carousel-item">
            <img class="second-slide"
                 src="{{ absolute_url(asset('/images/carousels/tarifs-raquette/sentier-raquette-laurentides.jpg')) }}"
                 alt="Second slide">
            <div class="container">
                <div class="carousel-caption d-none d-md-block text-left">
                    <h4>4 trails of various distances</h4>
                    <p>2km, 3.7km, 5.3 km et 8 km.</p>
                    <p><a class="btn btn-lg btn-primary" href="{{ path('vw_contact_homepage_en', {'_locale': 'en'}) }}" role="button">Contact Us</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="carousel-item">
            <img class="third-slide" src="{{ absolute_url(asset('/images/carousels/sentier-raquette/sentier-raquette-3.jpg')) }}"
                 alt="Third slide">
            <div class="container">
                <div class="carousel-caption d-none d-md-block text-right">
                    <h4>Natural trails quite splendid</h4>
                    <p>The Gai-Luron, the outdoor center to practice your winter sports.</p>
                    <p><a class="btn btn-lg btn-primary" href="{{ path('vw_contact_homepage_en', {'_locale': 'en'}) }}" role="button">Contact Us</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


