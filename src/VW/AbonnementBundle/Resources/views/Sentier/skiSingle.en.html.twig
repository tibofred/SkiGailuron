<div class="container pages">
    <div class="row">
        <div class="col-sm-12">
            <h1>Cross-country ski trail {{ sentier.nom }}</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">

        <div class="col-sm-8">
            <div id="sentiers">
                <span class="icon"></span>
                <img id="imgSentier" src="{{ absolute_url(asset('/images/sentiers/Tous-les-sentiers.jpg')) }}" alt="">

                <img class="piste-single"
                     src="{{ absolute_url(asset('/images/sentiers/sentiers-ski-de-fond-')) }}{{ sentier.slug }}.png">

            </div>
        </div><!-- end col -->


        <div class="col-sm-4" id="liste-sentiers">

            <div class="condition">
                <h3>Track Condition for {{ sentier.nom }} as of </h3>
                <h4>State : {{ sentier.condition.nomEn }} </h4>
                <h5>Track of {{ sentier.sport.nomEn }}</h5>
                <h5>Length : {{ sentier.longueur }} km</h5>
                {{ sentier.slug=='g'?"<h6>Pas de patin</h6>":"" }}
            </div>

            <hr>

            <a href="{{ path('vw_sentier_ski_en', {'_locale':'en'}) }}" class="btn btn-primary">Return to trails</a>

            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <a href="{{ path('vw_sentier_modifier', {'id': sentier.id}) }}" type="button" class="btn btn-success">Edit Track</a>
            {% endif %}


        </div><!-- end col -->
    </div><!-- end row -->

</div><!-- end container -->