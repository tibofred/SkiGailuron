                </div>
            </div><!-- end col -->


            <div class="col-sm-4" id="liste-sentiers">

              
                <h3>RAQUETTE</h3>
                <ul>
                    {% for sentier in sentiers if sentier.sport.id == raquette.id %}
                        <li><div style="color: #E90013;">{{ sentier.nom }} - {{ sentier.longueur }} km</div> {% if sentier.dernierTracage == null %}Aucun traçage{% else %}{{ sentier.dernierTracage|date("Y-m-d H:i") }}{% endif %}
                            - {% if sentier.statut == false %}Fermé{% else %}Ouvert{% endif %}</li>
                    {% endfor %}
                </ul>

            </div><!-- end col -->
        </div><!-- end row -->

    </div><!-- end container -->

