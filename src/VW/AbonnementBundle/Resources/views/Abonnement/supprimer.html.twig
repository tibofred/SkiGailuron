{% extends "VWAbonnementBundle::layout.html.twig" %}

{% block title %}

 Sport - {{ parent() }}

{% endblock %}

{% block vwclient_body %}
 
            
<h1>Supprimer {{ sport.nom }}</h1>
          <div class="container" style="min-height:600px">
                <div class="sm-col-12">
                  <h2>Supprimer le sport</h2>

                  <p>
                    Êtes-vous certain de vouloir supprimer le sport <strong>{{ sport.nom }}</strong> ?
                  </p>

                  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
                  <form action="{{ path('vw_sport_supprimer', {'id': sport.id}) }}" method="post">
                    <a href="{{ path('vw_sport_liste')}}" class="btn btn-default">
                      <i class="glyphicon glyphicon-chevron-left"></i>
                      Retour
                    </a>
                    {# Ici j'ai écrit le bouton de soumission à la main #}
                    <input type="submit" value="Supprimer" class="btn btn-danger" />
                    {# Ceci va générer le champ CSRF #}
                    {{ form_rest(form) }}
                </form>
                    </div>
                </div>


{% endblock %}

