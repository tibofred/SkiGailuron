                            <li><a href="{{ path('vw_condition_nouveau') }}">{{ 'Ajouter'|trans }}</a></li>
                        </ul>
                    </li>

                    <li>
                        <h3>{{ 'Durée'|trans }}</h3>
                        <ul>
                            <li><a href="{{ path('vw_duree_liste') }}">{{ 'Liste'|trans }}</a></li>
                            <li><a href="{{ path('vw_duree_nouveau') }}">{{ 'Ajouter'|trans }}</a></li>
                        </ul>
                    </li>


                    <li>
                        <h3>{{ 'Courriels'|trans }}</h3>
                        <ul>
                            <li><a href="{{ path('vw_contact_journal') }}">{{ 'Courriels reçus'|trans }}</a></li>
                        </ul>
