        <div class="row">
            <div class="col-sm-12">
                <ul id="liste-admin">

                    <li>
                        <h3>{{ 'Listes de clients'|trans }}</h3>
                        <ul>
                            <li><a href="{{ path('vw_client_homepage') }}">{{ 'Liste'|trans }}</a></li>
                            <li><a href="{{ path('vw_client_ajouter') }}">{{ 'Ajouter'|trans }}</a></li>
