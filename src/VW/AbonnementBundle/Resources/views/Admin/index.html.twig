            <div class="col-sm-3">
                <a href="{{ path('vw_type_liste') }}" class="btn btn-primary">{{ 'Voir les prix'|trans }}</a>
            </div>

            <div class="col-sm-3">
                <a href="{{ path('vw_abonnement_print', {'page': 0}) }}" class="btn btn-primary">{{ 'Imprimer'|trans }}</a>
            </div>
        </div>
    </div>

    <hr>

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>{{ 'Billets de journées'|trans }}</h2>
            </div>
        </div>
    </div>


    <div class="container" style="margin-bottom:3em; margin-top:3em;">
        <div class="row">
            <div class="col-sm-4">
                <a href="{{ path('vw_tarif_liste') }}" class="btn btn-primary">{{ 'Voir les prix'|trans }}</a>
            </div>

            <div class="col-sm-4">

