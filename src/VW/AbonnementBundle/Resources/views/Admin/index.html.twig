                        <h3>{{ 'Type de sport'|trans }}</h3>
                        <ul>
                            <li><a href="{{ path('vw_sport_liste') }}">{{ 'Liste'|trans }}</a></li>
                            <li><a href="{{ path('vw_sport_nouveau') }}">{{ 'Ajouter'|trans }}</a></li>
                        </ul>
                    </li>


                    <li>
                        <h3>Cat. ({{ 'Âge et situation'|trans }})</h3>
                        <ul>
                            <li><a href="{{ path('vw_categorie_liste') }}">{{ 'Liste'|trans }}</a></li>
                            <li><a href="{{ path('vw_categorie_nouveau') }}">{{ 'Ajouter'|trans }}</a></li>
