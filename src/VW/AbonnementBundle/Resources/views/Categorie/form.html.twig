{# src/VW/SeoBundle/Resources/views/Seo/form.html.twig #}


<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}
    
    <div class="row">
        
        <div class="col-sm-6">
                 <div class="form-group">
                    <div class="form-group">
                        {{ form_label(form.nom, "Nom de la passe (Français)", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        <div class="col-sm-8">
                          {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            <em>Entrer le nom du sport que le client va voir sur le site Internet</em>
                             {{ form_errors(form.nom) }}
                        </div>
                    </div>
                </div>
            </div>
        
        <div class="col-sm-6">
                 <div class="form-group">
                    <div class="form-group">
                        {{ form_label(form.nomEn, "Nom de la passe (Anglais)", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        <div class="col-sm-8">
                          {{ form_widget(form.nomEn, {'attr': {'class': 'form-control'}}) }}
                            <em>Entrer le nom du sport que le client va voir sur le site Internet</em>
                             {{ form_errors(form.nomEn) }}
                        </div>
                    </div>
                </div>
            </div>
            
  
        </div><!-- Row -->
    
    
    

        <div class="row">
            <div class="col-sm-12">
                {{ form_rest(form) }}
            </div>
        </div>

     

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
    
   </div>
        </div>